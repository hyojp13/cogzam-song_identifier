    "import numpy as np\n",
    "from microphone import record_audio\n",
    "def record(listen_time: float):\n",
    "\n",
    "    frames, sample_rate = record_audio(listen_time)\n",
    "    samples = np.hstack([np.frombuffer(i, np.int16) for i in frames])\n",
    "    return samples"
   ]
